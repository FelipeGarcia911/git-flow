{
  "name": "git-flow",
  "version": "1.0.0",
  "description": "Git Flow Example",
  "main": "index.js",
  "repository": "https://github.com/FelipeGarcia911/git-flow.git",
  "author": "Felipe Garc√≠a <arfgarciama@unal.edu.co>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "release:changelog": "release-it --changelog",
    "release:minor": "release-it --minor",
    "release:patch": "release-it --patch",
    "release:version": "release-it --release-version",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@release-it/conventional-changelog": "^5.1.1",
    "@release-it/keep-a-changelog": "^3.1.0",
    "commitlint": "^17.4.4",
    "husky": "^8.0.3",
    "release-it": "*"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "requireUpstream": false,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      },
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md"
      }
    }
  }
}
